public class Temperature {
    public void convert(integer choice, Double value){
        switch on choice{
            when 1{
                Double temp = value;
                temp = ((temp - 32) * 5) / 9;
                System.debug('Temp in celcius = '+temp);
            }
            when 2{
                Double temp = value;
                temp = ((temp * 1.8) + 32);
                System.debug('Temp in fahrenheit = '+temp);
            }
        }
    }
}
